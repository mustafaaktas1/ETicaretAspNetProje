<body>
    <!-- NavBar -->
    <nav>
        <div>
            <h2 id="logo"><a href="/Home/AnaSayfa/">Tıkla Al</a></h2>
            <h4 id="slogan"><a href="/Home/AnaSayfa/">Aradığınız Ürünler Tek Tıkla Kapınızda...</a></h4>
        </div>

        <div class="navlinkler nav nav-underline">
            <a href="#" class="nav-link" id="navlink">Yatırımcı İlişkileri</a>
            <a href="#" class="nav-link" id="navlink">Kampanyalar</a>
            <a href="#" class="nav-link" onclick="Konum()" id="navlink">Müşteri Destek & Yardım</a>
            <a href="/Login/Logout/" onclick="logout()" class="nav-link" id="navlink">Satıcı Girişi</a>


        </div>

        <div class="input-group">
            <input type="search" placeholder="Ürünler Arasında Arama Yapın" id="search">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Ara</button>
        </div>

        <div class="login @ViewData["login-hide"]">
            @*login-hide*@
            <button class="btn btn-secondary dropdown-toggle" id="loginbtn" aria-expanded="false">
                <ion-icon style="width: 20px;" name="person-circle-outline"></ion-icon>
                Giriş Yap
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Login/LoginIndex">Giriş Yap</a></li>
                <li><a class="dropdown-item" href="/Login/SignupIndex">Kayıt Ol</a></li>

            </ul>
        </div>
        <div class="account account-hide @ViewData["account-show"]">
            @*account-hide*@
            <button class="btn btn-secondary dropdown-toggle" id="accountbtn" aria-expanded="false">
                <ion-icon style="width: 20px;" name="person-circle-outline"></ion-icon>
                Hesabım
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Login/LoginIndex">Giriş Yap</a></li>
                <li><a class="dropdown-item" href="/Login/SignupIndex">Kayıt Ol</a></li>

            </ul>
            <button class="btn btn-secondary " id="sepetbtn" aria-expanded="false">
                <ion-icon style="width:20px" name="basket-outline"></ion-icon>
                Sepet
            </button>

        </div>

        <div class="nav nav-underline">
            <a class="nav-link" href="#" id="kategori">Elektronik</a>
            <a class="nav-link" href="#" id="kategori">Moda - Giyim</a>
            <a class="nav-link" href="#" id="kategori">Ev - Yaşam</a>
            <a class="nav-link" href="#" id="kategori">Kişisel Bakım</a>
            <a class="nav-link" href="#" id="kategori">Anne - Çocuk</a>
            <a class="nav-link" href="#" id="kategori">Dış Mekan-Spor</a>
            <a class="nav-link" href="#" id="kategori">Yapı Market</a>
            <a class="nav-link" href="#" id="kategori">Taşıtlar</a>
        </div>

    </nav>
    <!-- NavBar -->
    <!-- Sayfa İçeriği -->

    <main>

        @RenderBody()

    </main>
    <!-- Sayfa İçeriği -->
